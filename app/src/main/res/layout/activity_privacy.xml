<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f9f9f9">

    <include layout="@layout/common_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_myself_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:paddingLeft="13dp"
            android:paddingRight="12dp">
            <TextView
                android:id="@+id/tv_phone_privacy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码加“*”"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_centerVertical="true"/>

            <!--<android.support.v7.widget.SwitchCompat-->
                <!--android:id="@+id/sc_phone"-->
                <!--android:checked="true"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_alignParentRight="true"/>-->
            <com.dw.imximeng.widgets.MyClickButton
                android:id="@+id/sc_phone"
                android:checked="true"
                android:layout_width="44dp"
                android:layout_height="27dp"
                app:open_paint_color="#689DF5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View style="@style/ViewLineHorizontal" android:layout_marginLeft="13dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:paddingLeft="13dp"
            android:paddingRight="12dp">
            <TextView
                android:id="@+id/tv_user_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许陌生人查看我的信息"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_centerVertical="true"/>

            <com.dw.imximeng.widgets.MyClickButton
                android:id="@+id/sc_user_info"
                android:layout_width="44dp"
                android:layout_height="27dp"
                app:open_paint_color="#689DF5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>