<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_2dp_corner_white_bg"
    android:orientation="vertical"
    android:id="@+id/ll_sign_in">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        android:gravity="center_horizontal"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/tv_mn_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#999999"
        android:text="Congratulations on the success of signing"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:layout_marginTop="27dp">
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#457BD6"
            android:text="+3"
            android:textSize="36sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#457BD6"
            android:text="积分"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:includeFontPadding="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="20dp"
        android:text="确定"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape_sign_in_btn_enable"/>
</LinearLayout>