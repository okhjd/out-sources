<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f9f9">
    <include layout="@layout/common_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_myself_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_payment_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:drawablePadding="6dp"
                android:layout_toLeftOf="@+id/tv_not_set_pay"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="支付密码"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_not_set_pay"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pic7"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="未设置"
                android:textColor="#999999"
                android:textSize="14sp"/>
        </RelativeLayout>


        <View
            style="@style/ViewLineHorizontal"
            android:layout_marginLeft="12dp"
            android:background="#ebebeb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:drawablePadding="6dp"
                android:layout_toLeftOf="@+id/tv_modify_password"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="登录密码"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_modify_password"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pic7"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="修改"
                android:textColor="#999999"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_myself_margin"
        android:baselineAligned="false"
        android:drawableRight="@mipmap/pic7"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="发布隐私"
        android:textSize="14sp"
        android:textColor="#333333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_myself_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_help_center"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:drawableRight="@mipmap/pic7"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="帮助中心"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <View
            style="@style/ViewLineHorizontal"
            android:layout_marginLeft="12dp"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:drawableRight="@mipmap/pic7"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="意见反馈"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <View
            style="@style/ViewLineHorizontal"
            android:layout_marginLeft="12dp"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/tv_service_statement"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:drawableRight="@mipmap/pic7"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="广告服务声明"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <View
            style="@style/ViewLineHorizontal"
            android:layout_marginLeft="12dp"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/tv_online_service"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:drawableRight="@mipmap/pic7"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="在线客服"
            android:textSize="14sp"
            android:textColor="#333333"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_myself_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:drawablePadding="6dp"
                android:layout_toLeftOf="@+id/tv_version_tips"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="版本更新"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_version_tips"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pic7"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="当前已是最新版本"
                android:textColor="#999999"
                android:textSize="14sp"/>
        </RelativeLayout>

        <View
            style="@style/ViewLineHorizontal"
            android:layout_marginLeft="12dp"
            android:background="#ebebeb" />

        <RelativeLayout
            android:id="@+id/rl_clear_cahce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:drawablePadding="6dp"
                android:layout_toLeftOf="@+id/tv_cache_size"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="缓存清理"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pic7"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="12.00MB"
                android:textColor="#699df5"
                android:textSize="14sp"/>
        </RelativeLayout>

        <View
            style="@style/ViewLineHorizontal"
            android:layout_marginLeft="12dp"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:drawableRight="@mipmap/pic7"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="关于我们"
            android:textSize="14sp"
            android:textColor="#333333"/>

    </LinearLayout>

    <Button
        android:id="@+id/tv_user_exit"
        style="@style/TextViewButtonTheme"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:background="@drawable/shape_sign_in_btn_enable"
        android:text="退出登录" />
</LinearLayout>