<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/pic1"
            android:drawablePadding="7dp"
            android:text="@string/app_name"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/pic2" />
    </RelativeLayout>

    <View
        style="@style/ViewLineHorizontal"
        android:background="#ebebeb" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/pic18"
        android:drawablePadding="9dp"
        android:padding="12dp"
        android:text="地区"
        android:textColor="#808080"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="22dp">
        <TextView
            android:id="@+id/tv_current_area_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/pic19"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="请设置您的默认地区"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_current_area_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/pic19"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="请设置您的默认地区"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"/>
    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长按下列地区可设为默认地区"
        android:textSize="10sp"
        android:textColor="#999999"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"/>

    <ListView
        android:id="@+id/lv_region"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@null"/>
</LinearLayout>