<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_margin"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="16dp"
        android:paddingRight="15dp">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="请输入关键字"
            android:drawableLeft="@mipmap/pic2"
            android:drawablePadding="15dp"
            android:singleLine="true"
            android:background="@drawable/shape_search_margin"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_hint"
            android:layout_toLeftOf="@+id/tv_cancel"
            android:imeOptions="actionSearch"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="13dp"
            android:textSize="15sp"
            android:textColor="#808080"
            android:layout_centerVertical="true"
            android:onClick="back"/>
    </RelativeLayout>
    <com.dw.imximeng.widgets.AutoListView
        android:id="@+id/lv_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:divider="#ebebeb"
        android:visibility="visible"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic34"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无最新发布~"
                android:textColor="#9b9b9b"
                android:textSize="17sp"
                android:layout_marginTop="24dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_load_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic36"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载失败"
                android:textColor="#666666"
                android:textSize="17sp"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击屏幕重新加载"
                android:textColor="#9b9b9b"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>