<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/pic1"
            android:drawablePadding="7dp"
            android:text="@string/app_name"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/pic2" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_current_area_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/pic19"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="您未选择地区"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_city_service"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/shape_myself_margin"
        android:drawableLeft="@mipmap/pic20"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/pic7"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="12dp"
        android:layout_marginTop="10dp"
        android:text="同城服务"
        android:textSize="14sp"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/tv_small_tools"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/shape_myself_margin"
        android:drawableLeft="@mipmap/pic21"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/pic7"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="12dp"
        android:layout_marginTop="10dp"
        android:text="小工具"
        android:textSize="14sp"
        android:textColor="#333333"/>
</LinearLayout>